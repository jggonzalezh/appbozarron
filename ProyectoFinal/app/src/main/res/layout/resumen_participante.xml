<?xml version="1.0" encoding="utf-8"?>
<!-- Es la vista para los item de la lista  -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="1dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"

    android:id="@+id/resumen_personajes">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/imagen"
            android:src="@mipmap/ic_equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:maxHeight="10dp"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:id="@+id/relacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imagen"
            android:textSize="24px"
            android:text="Rol del participante"
            android:textStyle="bold"
        />
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relacion"
            android:layout_toLeftOf="@+id/imagen"
            android:textSize="24px"
            android:text="Nombre del particpante"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>