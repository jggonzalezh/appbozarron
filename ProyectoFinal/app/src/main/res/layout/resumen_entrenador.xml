<?xml version="1.0" encoding="utf-8"?>
<!-- Es la vista para los item de la lista  -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_margin="1dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"

    android:id="@+id/resumen_personajes">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagen_entrenador"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp"/>

        <!--<ImageView
            android:id="@+id/imagen_entrenador"
            android:src="@drawable/adele_cir"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:maxHeight="10dp"
            android:layout_marginLeft="20dp"

            />-->
        <TextView
            android:id="@+id/titulo_entrena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imagen_entrenador"
            android:textSize="24px"
            android:text="Entrenador"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/nombre_entrenador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_entrena"
            android:layout_toLeftOf="@+id/imagen_entrenador"
            android:textSize="24px"
            android:text="Nombre del entrenador"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>